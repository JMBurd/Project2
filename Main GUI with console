def search():
    
    global BFileName
    
    filetype = (
    ('grep files', '*.gz'),
    ('fasta files', '*.fasta'),
    ('All files', '*.*'))

    root.filename = fd.askopenfilename(
        title="select a file",
        filetypes = filetype)
    BFileName = os.path.basename(root.filename)
    #this is a test print out and not needed
    alabel=Label(root, text=BFileName).grid()
    
